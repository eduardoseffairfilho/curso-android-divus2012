<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <EditText
        android:id="@+id/etEndereco"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/main_url">
        <requestFocus android:background="@android:color/darker_gray"/>
	</EditText>

    <Button
        android:id="@+id/bt_abrir_browser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/etEndereco"
        android:text="@string/bt_abrir_browser" />

</RelativeLayout>
